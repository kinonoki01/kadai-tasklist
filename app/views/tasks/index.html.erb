<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th>content</th>
        <th>status</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
